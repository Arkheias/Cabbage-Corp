<?xml version="1.0" ?>
<TranscendenceModule>
	
<!-- ======================================================================= -->
							<!-- DRADIS Devices -->
<!-- ======================================================================= -->
<!--
	Note: addPerception is the additional perception value added to the ship's
			default perception value while the device is installed.
			
	Note: minPerception is the minimum perception value that the ship can then
			have after addPerception has been taken into account.
			
	Note: These devices currently only affect NPC ships.
-->

	<!-- mark I DRADIS module -->

	<ItemType UNID="&itCCMIDRADISModule;"
			name=				"mark I DRADIS module"
			attributes=			"cabbageCorp, cabbageDRADIS, majorItem, specialty"
			inherit=			"&baCCDRADISBase;"
			
			level=				"5"
			frequency=			"veryrare"
			
			value=				"6000"
			mass=				"4000"

			description=		"This device increases the effective resolution of a ship's targeting sensors, increasing the range at which it can detect hidden objects in space."
	>

		<Image imageID="&rsCCDevices;" imageX="192" imageY="192" imageWidth="96" imageHeight="96"/>
		
		<MiscellaneousDevice
				powerUse=		"20"
		/>
		
		<StaticData>
			<CCDRADIS>
				{minPerception:3 addPerception:1}
			</CCDRADIS>
		</StaticData>
	</ItemType>
	
