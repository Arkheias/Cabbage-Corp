<!-- Dock Screens -->

	<!-- Savoy Howitzer Modifications -->

	<DockScreen	UNID="&dsCCSavoyHowitzers;"
			name=				"Ship's Interior"
			backgroundID=		"&rsShipInterior;"
			nestedScreen=		"true"
			>
			
		<InitialPane>
			(switch
				(itmGetProperty gItem 'damaged)
					"NoUse"
					
				"Default"
				)
		</InitialPane>
		
		<Panes>
			<Default>
				<OnPaneInit>
					(block Nil
						(setq desc 
							(cat "Savoy howitzers are built with variable-speed shell loaders to compensate for overheating."
								"\n\n"
								"Yours currently has a delay of "
								 (switch
									(itmIsInstalled (itmCreate &vtCCHowitzerRestrictionBoltL1; 1))
										"60%."
									(itmIsInstalled (itmCreate &vtCCHowitzerRestrictionBoltL2; 1))
										"120%."
									(itmIsInstalled (itmCreate &vtCCHowitzerRestrictionBoltL3; 1))
										"160%."
									(itmIsInstalled (itmCreate &vtCCHowitzerRestrictionBoltL4; 1))
										"200%."
									(itmIsInstalled (itmCreate &vtCCHowitzerRestrictionBoltL5; 1))
										"240%."
									"100%."
									)
								"\n\n"
								"Which mode would you like to set it to?"
								"\n\n"
								"Note: Installed Savoy howitzers automatically synchronize theirsame delay settings."
								)
							)
						(scrSetDesc gScreen desc)
						)
				</OnPaneInit>
				
				<Actions>
					<Action name="1) Set delay to 100% (default)" default="1" key="1">
						(block nil
							(enum (objGetItems gSource "bV; I; +howitzerRestrictionBolt") restrictionBolt
								(block nil
									(shpRemoveDevice gSource restrictionBolt)
									(objRemoveItem gSource restrictionBolt)
									)
								)
							(scrExitScreen gScreen)
							)
					</Action>
					<Action name="2) Set delay to 120%" key="2">
						(block nil
							(enum (objGetItems gSource "bV; I; +howitzerRestrictionBolt") restrictionBolt
								(block nil
									(shpRemoveDevice gSource restrictionBolt)
									(objRemoveItem gSource restrictionBolt)
									)
								)
							(objAddItem gSource (itmCreate &vtCCHowitzerRestrictionBoltL2; 1))
							(shpInstallDevice gSource (itmCreate &vtCCHowitzerRestrictionBoltL2; 1))
							(scrExitScreen gScreen)
							)
					</Action>
					<Action name="3) Set delay to 160%" key="3">
						(block nil
							(enum (objGetItems gSource "bV; I; +howitzerRestrictionBolt") restrictionBolt
								(block nil
									(shpRemoveDevice gSource restrictionBolt)
									(objRemoveItem gSource restrictionBolt)
									)
								)
							(objAddItem gSource (itmCreate &vtCCHowitzerRestrictionBoltL3; 1))
							(shpInstallDevice gSource (itmCreate &vtCCHowitzerRestrictionBoltL3; 1))
							(scrExitScreen gScreen)
							)
					</Action>
					<Action name="4) Set delay to 200%" key="4">
						(block nil
							(enum (objGetItems gSource "bV; I; +howitzerRestrictionBolt") restrictionBolt
								(block nil
									(shpRemoveDevice gSource restrictionBolt)
									(objRemoveItem gSource restrictionBolt)
									)
								)
							(objAddItem gSource (itmCreate &vtCCHowitzerRestrictionBoltL4; 1))
							(shpInstallDevice gSource (itmCreate &vtCCHowitzerRestrictionBoltL4; 1))
							(scrExitScreen gScreen)
							)
					</Action>
					<Action name="5) Set delay to 240% (safest)" key="5">
						(block nil
							(enum (objGetItems gSource "bV; I; +howitzerRestrictionBolt") restrictionBolt
								(block nil
									(shpRemoveDevice gSource restrictionBolt)
									(objRemoveItem gSource restrictionBolt)
									)
								)
							(objAddItem gSource (itmCreate &vtCCHowitzerRestrictionBoltL5; 1))
							(shpInstallDevice gSource (itmCreate &vtCCHowitzerRestrictionBoltL5; 1))
							(scrExitScreen gScreen)
							)
					</Action>
					
					<Action name="Cancel" cancel="1" key="C">
						(scrExitScreen gScreen)
					</Action>
				</Actions>
			</Default>
			
			<NoUse>
				<OnPaneInit>
					(scrSetDesc gScreen 
						"This device is too damaged to further modify."
						)
				</OnPaneInit>
				
				<Actions>
					<Action name="Done" cancel="1" default="1" key="D">
						(scrExitScreen gScreen)
					</Action>
				</Actions>
			</NoUse>
		</Panes>
	</DockScreen>

